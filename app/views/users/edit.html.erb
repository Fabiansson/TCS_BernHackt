<h1>Editing User</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag(edit_user_path(@user), method: 'get', role: 'form') %>
      <%= label_tag :first_name %>
      <%= text_field_tag :first_name, @user.first_name, class: 'form-control' %>

      <%= label_tag :last_name %>
      <%= text_field_tag :last_name, @user.last_name, class: 'form-control' %>

      <%= label_tag :birth_date %>
      <%= date_field_tag :birth_date, @user.birth_date, class: 'form-control' %>

      <%= label_tag :email %>
      <%= email_field_tag :email, @user.email, class: 'form-control' %>

      <%= label_tag 'TCS number' %>
      <%= text_field_tag :tcs_number, @user.tcs_number, class: 'form-control' %>

      <%= submit_tag "Save changes", class: "btn btn-primary" %>
  </div>
</div>

<%= link_to 'Show', @user %> |
